
@{
    ViewBag.Title = "Details";
    var id = Session["ID"];
    if (id.ToString().First().Equals('9'))
    {
        Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    }
    else
    {
        Layout = "~/Areas/Admin/Views/Shared/_layout_vanphong.cshtml";
    }
    var chitiet = (List<TrungTam.Areas.Admin.Abstracts.TINH_LUONG>)ViewBag.chitiet;
    var chitiet_ngoaigio = (List<TrungTam.Areas.Admin.Abstracts.TINH_LUONG>)ViewBag.chitiet_ngoaigio;
    var stt = 0;
}
<h2 class="Title_Content">Chi tiết lương của tháng</h2>
<div class="card-body">
    <table class="table table-bordered table-hover myTable">
        <thead class="text-white text-center">
            <tr class="bg-primary">
                <th>STT</th>
                <th>Thời gian</th>
                <th>Hoạt động</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody id="tableDanhSach" class="text-center">
            @foreach (var item in chitiet)
            {
                stt += 1;
                <tr>
                    <td>
                        @stt
                    </td>
                    <td>
                        @item.THOI_GIAN
                    </td>
                    <td>
                        @item.TEN_LOAI
                    </td>
                    <td>
                        @item.SO_BUOI
                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.LUONG)
                    </td>
                </tr>
            }
            @foreach (var item in chitiet_ngoaigio)
            {
                stt += 1;
                <tr>
                    <td>
                        @stt
                    </td>
                    <td>
                        @item.THOI_GIAN
                    </td>
                    <td>
                        @item.TEN_LOAI
                    </td>
                    <td>
                        @item.SO_LUONG
                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.LUONG)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <center>
        <a href="~/Admin/HOA_DON/Index" class="btn btn-warning">Quay lại</a>
    </center>
</div>