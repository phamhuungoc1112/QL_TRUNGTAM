                            }
                            switch (e.THU) {
                                case 1:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#1"+buoi);
                                        break;
                                    }
                                case 2:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#2" + buoi);
                                        break;
                                    }
                                case 3:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#3" + buoi);
                                        break;
                                    }
                                case 4:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#4" + buoi);
                                        break;
                                    }
                                case 5:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#5" + buoi);
                                        break;
                                    }
                                case 6:
                                    {
                                        $("<p/>").html(e.TEN_LOP + "<br/> Bắt đầu: " + e.THOI_GIAN_BD + "<br/> Kết thúc : " + e.THOI_GIAN_KT).appendTo("#6" + buoi);
