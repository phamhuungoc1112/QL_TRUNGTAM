<section>
    <script>
        window.onload = function () {
            $.ajax({
                url: "/Home_User/lol",
                data: { id: 1 },
                dataType: "Json",
                type: "GET",
                success: function (response) {
                    $(response).each
                        (
                        function (i, e) { //duyet mang doi tuong
                            if (e.THOI_GIAN_BD < "12:59:00") {
                                var buoi = "A";
                            }
