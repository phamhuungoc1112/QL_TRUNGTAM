@model TrungTam.Areas.Admin.Models.NGOAI_GIO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal myContent m-5 p-5">
    <h2 class="Title_Content">Cập Nhật bảng chấm công ngoài giờ</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MA_NGOAI_GIO)
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2"><span><i class="fab fa-joget mr-2"></i>Loại hoạt động</span></div>
            <div class="col-6">
                @Html.EditorFor(model => model.BANG_LUONG.TEN_LOAI, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.HiddenFor(model => model.MA_LUONG)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2"><span><i class="fab fa-joget mr-2"></i>Giáo viên</span></div>
            <div class="col-6">
                @Html.EditorFor(model => model.GIAO_VIEN.HO_TEN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.HiddenFor(model => model.MA_GV)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2"><span><i class="fab fa-joget mr-2"></i>Ngày làm</span></div>
            <div class="col-6">
                @Html.EditorFor(model => model.NGAY_LAM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAY_LAM, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2"><span><i class="fab fa-joget mr-2"></i>Số lượng</span></div>
            <div class="col-6">
                @Html.EditorFor(model => model.SO_LUONG, new { htmlAttributes = new { @class = "number" } })
                @Html.ValidationMessageFor(model => model.SO_LUONG, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-2">@Html.ActionLink("Quay Lại", "Index")</div>
            <div class="col-4 ">
                <button type="submit" value="Save" class="btn btn-primary w-50"><i class="fa fa-save mr-2"></i>Save</button>
            </div>
        </div>

    </div>
</div>
}
