    <!-- carousel -->
    <form action="/TRANG_CHU/updateMucTieu" method="post">
        <section class=" myCarousel">
            <div id="demo" class="carousel carousel-fade slide " data-ride="carousel" data-interval="2000">

                <!-- Indicatorsô vuông nhỏ -->
                <ul class="carousel-indicators">
                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                    <li data-target="#demo" data-slide-to="1"></li>
                    <li data-target="#demo" data-slide-to="2"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner col-12 col-sm-12 col-md-12">
                    <div class="carousel-item active">
                        <img src="~/Asset/admin/img/ca12.jpg" class="img-fluid w-100" alt="Chicago">
                        <div class="carousel_overlay"></div>
                        <div class=" carousel_caption" id="data_muctieu">
                        
                            <h1 class="display-5">TRUNG TÂM BDVH - KHOA HỌC TRẢI NGHIỆM</h1>
                            @foreach (var item in noidung)
                            {
                                <p>
                                    @item.MUC_TIEU<button class="btn btn-primary" type="button" id="btn_muctieu">Thay đổi</button>
                                </p>
                                break;
                            }
                        </div>

                        @*input thay đổi caption*@
                        <div class="carousel_caption" id="update_muctieu">
                          
                            <h1 class="display-5">TRUNG TÂM BDVH - KHOA HỌC TRẢI NGHIỆM</h1>
                            <div>
                                <button id="luu_muctieu" type="submit" class="btn btn-primary">Lưu</button>
                                <button id="huy_muctieu" type="button" class="btn btn-warning">Hủy</button>
                            </div>
                            @foreach (var item in noidung)
                            {
                                <p>
                                    <textarea class="md-textarea form-control" rows="7" name="muctieu">@item.MUC_TIEU</textarea>

                                </p>
                                break;
                            }

                        </div>
                    </div>
                </div>

            </div>
        </section>
    </form>
    <form action="/TRANG_CHU/updateGioiThieu" method="post">
        <!-- giới thiệu -->
        <section class="Gioithieu mt-5" id="GioiThieU">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-7"><img src="~/Asset/admin/img/Gt.jpg" class="w-100 h-100" alt=""></div>
                    <div class="col-12 col-md-5 col-sm-12 content_text_gt" id="data_gioithieu">
                        <h2 class="gt_detitle ">Giới Thiệu</h2>
                        @foreach (var item in noidung)
                        {
                            <p>
                                @item.GIOI_THIEU
                            </p>
                            break;
                        }
                        <button class="btn btn-primary" id="btn_gioithieu" type="button">Thay đổi</button>
                    </div>
                    @*input thay đổi phần giới thiệu*@
                    <div class="col-12 col-md-5 col-sm-12 content_text_gt" id="update_gioithieu">
                        <h2 class="gt_detitle ">Giới Thiệu</h2>
                        @foreach (var item in noidung)
                        {
                            <p>
                                <textarea class="md-textarea form-control" rows="7" name="gioithieu">@item.GIOI_THIEU</textarea>
                            </p>
                            break;
                        }
                        <button id="luu_gioithieu" type="submit" class="btn btn-primary">Lưu</button>
                        <button id="huy_gioithieu" type="button" class="btn btn-warning">Hủy</button>
                    </div>
                </div>
            </div>
        </section>
    </form>
