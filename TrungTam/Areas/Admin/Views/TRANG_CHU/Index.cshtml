<section>
    <script>
        $("button#btn_muctieu").click(function () {
            $('div#data_muctieu').hide();
            $('div#update_muctieu').show();
        });
    </script>
    <script>
        $("button#huy_muctieu").click(function () {
            $('div#data_muctieu').show();
            $('div#update_muctieu').hide();
        });
    </script>
    <script>
        $("button#btn_gioithieu").click(function () {
            $('div#data_gioithieu').hide();
            $('div#update_gioithieu').show();
        });
    </script>
    <script>
        $("button#huy_gioithieu").click(function () {
            $('div#data_gioithieu').show();
            $('div#update_gioithieu').hide();
        });
    </script>
    <script>
        $("button#btn_lienhe").click(function () {
            $('tbody#data_lienhe').hide();
            $('tbody#update_lienhe').show();
        });
    </script>
    <script>
        $("button#huy_lienhe").click(function () {
            $('tbody#data_lienhe').show();
            $('tbody#update_lienhe').hide();
        });
    </script>
</section>
<section>
    <script>
        window.onload = function () {
            do_validate();
        };
        function do_validate() {
            $('tbody#update_lienhe').hide();
            $('div#update_gioithieu').hide();
            $('div#update_muctieu').hide();
        };

    </script>
</section>